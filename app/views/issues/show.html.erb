<h1><%= @issue.title %></h1>
<h2><%= @issue.subtitle %></h2>
<span class="previous navigation">
  <%= link_to @issue.previous_label, issue_path(@issue.previous_id) %>
</span>
<span class="next navigation">
  <%= link_to @issue.next_label, issue_path(@issue.next_id) %>
</span>


<% if @issue.audio %>

  <div class="audio-box">
  </div>
  <script type="text/javascript">
    var audio = new Audio('<%= "#{Issue::BASE_DOMAIN_URL}/#{@issue.audio.src}" %>');
    audio.loop = true;
    audio.controls = true;
    audio.autoplay = true;

    /* hack for browsers that don't support the nice autoplay and loop attributes */
    
    audio.addEventListener('ended', function() {
      this.currentTime = 0;
      this.play();
    }, false);
    audio.play();
    $('.audio-box').append(audio);
  </script>
<% end %>

<ul id="images">
  <% @issue.images.each do |image| %>
    <li><%= image_tag Issue::BASE_DOMAIN_URL + "/" + image.src %></li>
  <% end %>
</ul>

